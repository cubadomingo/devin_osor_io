<div class="container-fluid resize_mac_app container-margin">
  <div class="row no_padding">
    <div class="col-lg-12 center mac_app_body">
      <div class="upper">
        <div class="buttons">
          <div class="button red">
          </div>
          <div class="button yellow">
          </div>
          <div class="button green">
          </div>
        </div>
        <span class="title">categories</span>
      </div>
      <div class="enter">
        <div class="terminal_prompt">
          <span class="p_symbol">[</span><span class="t_symbol">[terminal]: ~$</span>
          <span class="p_symbol">ls -l</span>
        </div>
        <% if logged_in? %>
          <div class="text-center">
            <%= link_to "New Category", new_category_path, class: "btn btn-primary button-margin button-margin-bottom" %>
          </div>
        <% end %>
        <% @categories.each do |category| %>
            <p></p>
            <h1 class="text-left">*<%= link_to category.name, category%></h1>
          <% if logged_in? %>
          <div class="text-center">
            <%= link_to "edit", edit_category_path(category.id),class: "btn btn-primary button-margin-bottom" %>
            <%= link_to "delete", category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary button-margin-bottom" %>
          </div>
          <% end %>
        <% end %>
        <div class="text-left terminal_prompt">
          <span class="p_symbol">[</span><span class="t_symbol cursor">[terminal]: ~$</span>
        </div>
      </div>
    </div>
  </div>
</div>
