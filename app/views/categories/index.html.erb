<div class="container-fluid page_height">
  <div class="row no_padding post_margin">
    <div class="col-lg-12 center categories_body">
      <div class="upper">
        <div class="buttons">
          <div class="button red">
          </div>
          <div class="button yellow">
          </div>
          <div class="button green">
          </div>
        </div>
        <span class="title">-bash</span>
      </div>
      <div class="enter">
        <h1>{categories}</h1>
        <% if logged_in? %>
          <div class="text-center">
            <%= link_to "New Category", new_category_path, class: "btn btn-primary" %>
          </div>
        <% end %>
        <% @categories.each do |category| %>
            <div class="text-center category_font"><%= link_to category.name.downcase, category%></div>
          <% if logged_in? %>
          <div class="text-center">
            <span><%= link_to "edit", edit_category_path(category.id),class: "btn btn-primary" %></span>
            <span><%= link_to "delete", category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %></span>
          <div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
