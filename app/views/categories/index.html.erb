<div id="about" class="container-fluid page_height">
  <div class="row no_padding">
    <div class="col-lg-12 center" id="shell2">
      <div id="upper">
        <div id="buttons">
          <div class="button red">
          </div>
          <div class="button yellow">
          </div>
          <div class="button green">
          </div>
        </div>
        <span class="title">-bash</span>
      </div>
      <div id="enter">
        <h1 class="terminal_title">/categories</h1>
        <span class="terminal_text">[</span><span class="terminal_text terminal_user">[terminal]: ~$</span>
        <span class="terminal_text">cat categories.txt</span>
        <% if logged_in? %>
          <div class="comment_button">
            <%= link_to "New Category", new_category_path, class: "btn btn-primary" %>
          </div>
        <% end %>
        <% @categories.each do |category| %>
          <ul>
            <li class="terminal_text1 cat_height">*<%= link_to category.name, category %></li>
          </ul>
          <% if logged_in? %>
            <span><%= link_to "edit", edit_category_path(category.id),class: "btn btn-primary" %></span>
            <span><%= link_to "delete", category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %></span>
          <% end %>
        <% end %>
        <span class="terminal_text">[</span><span id="cursor" class="terminal_text terminal_user">[terminal]: ~$</span>
      </div>
    </div>
  </div>
</div>